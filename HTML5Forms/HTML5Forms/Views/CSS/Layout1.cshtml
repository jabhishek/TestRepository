@{
    ViewBag.Title = "Layout1";
}

<style>
    #outerDiv
    {
        width: 200px;
        height: 200px;
        background-color: rgba(0, 0, 200, 1);
        border: thin solid black;
        position:relative;
        border-radius:10px;
        z-index: 100;
    }

    #innerDiv
    {
        width: 145px;
        height: 55px;
        background-color: rgba(255, 106, 0, 1);
        left: 10px;
        top: 20px;
        border: thin solid black;
        border-radius:10px;
        z-index: 100;
    }

    #innerDiv2
    {
        width: 75px;
        height: 65px;
        background-color: rgba(255, 206, 0, 1);
        left: 10px;
        top: 20px;
        border: thin solid black;
        border-radius:10px;
        z-index: 12;
    }
</style>
<h2>Layout1</h2>

<div id="outerDiv">
    <div id="innerDiv"></div>
    <div id="innerDiv2"></div>
</div>
<p>
    <button>Static</button>
    <button>Relative</button>
    <button>Absolute</button>
    <button>Fixed</button>
</p>
<script>
    var buttons = document.getElementsByTagName("BUTTON");
    for (var i = 0; i < buttons.length; i++) {
        buttons[i].onclick = function (e) {
            document.getElementById("innerDiv").style.position =
            e.target.innerHTML;
            document.getElementById("innerDiv2").style.position =
            e.target.innerHTML;
        };
    }
</script>
